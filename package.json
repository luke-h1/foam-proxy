{
  "name": "foam-proxy",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "esbuild --bundle --minify --keep-names --sourcemap --sources-content=false --target=node20 --platform=node --outfile=dist/index.js src/index.ts",
    "clean": "rm -rf ./dist",
    "test": "jest",
    "test:ci": "jest --ci --reporters=default --reporters=jest-junit",
    "tsc": "tsc --noEmit",
    "alphabetize": "node scripts/alphabetizePackageJson.js",
    "commit": "cz",
    "format": "prettier --write \"apps/**/*.{js,jsx,ts,tsx,css,scss,html}\"",
    "format:check": "prettier --list-different \"apps/**/*.{js,jsx,ts,tsx,css,scss,html}\"",
    "lint": "eslint --fix --ext .ts,.tsx,.js,.jsx .",
    "prepare": "husky"
  },
  "dependencies": {
    "aws-xray-sdk": "^3.6.0",
    "axios": "^1.6.8",
    "debug": "^4.3.4",
    "lodash": "^4.17.21",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.134",
    "@types/debug": "^4.1.12",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.0",
    "babel-jest": "^29.7.0",
    "esbuild": "^0.20.2",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.2.4",
    "typescript": "^5.4.3",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/node": "20.14.10",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "commitizen": "4.3.1",
    "conventional-changelog-angular-all": "^1.7.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "git-cz": "^4.9.0",
    "husky": "^9.1.6",
    "lint-staged": "15.2.10",
    "prettier": "^3.3.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint"
    ],
    "*.{js,jsx,ts,tsx,css,scss,html}": [
      "prettier --write"
    ],
    "package.json": [
      "node scripts/alphabetizePackageJson.js"
    ]
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
    }
  }
}
